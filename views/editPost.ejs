<%- include("partials/header.ejs") %>

<body>
  <div class="container">
    <div class="box1">
      <h2>Edit Post</h2>
      <form method="POST" action="/post/edit/<%= post.id %>" enctype="multipart/form-data">
        <!-- Title -->
        <input 
          type="text" 
          name="title" 
          value="<%= post.title %>" 
          required 
        /><br /><br />

        <input type="file" name="image" accept="image/*" /><br /><br />


        <!-- Content -->
        <textarea
          name="content"
          rows="6"
          cols="50"
          required
        ><%= post.content %></textarea><br /><br />

        <!-- Submit -->
        <input type="submit" value="Update Post" class="btn edit-btn"/>
      </form>
    </div>
  </div>
</body>
