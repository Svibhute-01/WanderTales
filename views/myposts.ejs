<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Posts</title>
    <link rel="stylesheet" href="/styles/myposts.css" />
  </head>

  <body>
    <div class="posts">
      <h2>My Blog Posts</h2>

      <% if (posts.length === 0) { %>
      <p class="no-posts">You haven't written any posts yet!</p>
      <% } else { %>
      <div class="post-grid">
        <% posts.forEach(post => { %>
        <div class="post">
          <% if (post.image) { %>
          <img src="<%= post.image %>" alt="Post Image" />
          <% } else { %>
          <img src="/images/default.jpg" alt="Default Image" />
          <% } %>

          <div class="post-content">
            <h3><%= post.title %></h3>
            <p><%= post.content.substring(0, 100) %>...</p>
            <em>By <%= post.author %></em>
          </div>

          <div class="post-actions">
            <a href="/post/edit/<%= post.id %>" class="read-btn">Edit</a>

            <form
              action="/post/delete/<%= post.id %>"
              method="POST"
              style="display: inline"
            >
              <button type="submit" class="read-btn">Delete</button>
            </form>

            <button
              class="read-btn"
              onclick="window.location.href='/posts/<%= post.id %>'"
            >
              Read
            </button>
          </div>
        </div>
        <% }); %>
      </div>
      <% } %>
    </div>
  </body>
</html>
